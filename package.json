{
  "name": "@regame/editor",
  "version": "1.0.0",
  "description": "Visual editor for ReGame Engine - Create cross-platform games with ease",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently --kill-others \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:dev:clear": "concurrently --kill-others \"vite\" \"wait-on http://localhost:5173 && electron . --clear-cache\"",
    "package": "electron-builder"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "fs-extra": "^11.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.regame.editor",
    "productName": "ReGame Editor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "dist/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  },
  "private": true
}
